***********************************************************01/03/25*****************************************************************
***************************************************MULTI INHERITANCE**********************************************************************
import java.util.*;
class student{
    int Mark=98;
    String Name="karthi";
}
class college extends student{
    String dpt= "EEE";
}
public class Main
{
	public static void main(String[] args) {
	    college s1 =new college();
	    System.out.println("Student Name : " +s1.Name);
		System.out.println("Student Mark : " +s1.Mark);
		System.out.println("Student Department : "+s1.dpt);
	}
}
OUTPUT:
Student Name : karthi
Student Mark : 98
Student Department : EEE
/////////////////////////user give input///////////////////////////
import java.util.*;
class student{
   	       int Mark;
        String Name;
}
class college extends student{
    String dpt;
}
class placement extends college{
    double cgpa;
}
public class Main
{
	 public static void main(String[] args) {
     Scanner sc = new Scanner(System.in);
	    placement s =new placement();
	     s.Mark=sc.nextInt();
	     sc.nextLine();
	     s.Name=sc.next();
	     s.dpt=sc.next();
	     s.cgpa =sc.nextDouble();
	    System.out.println("Student Name : " + s.Name + " , "+"Student Mark : " + s.Mark +" , "+ "Student cgpa : " + s.cgpa +" , "+ "Student Department : " + s.dpt);
	}
}
OUTPUT:
80  
karthi
EEE
9.0
Student Name : karthi , Student Mark : 80 , Student cgpa : 9.0 , Student Department : EEE
****************************************************************************************************************************************************************************
*****************************************************************polymorphism**************************************************************************************
import java.util.*;
public class Main{
    public static void main(String[]args){
        three sc=new three();
        sc.display();
    }
}
class one{
    public void display2(){
        System.out.println("class one");
    }
}
class two extends one{
    public void display1(){
        System.out.println("class two");
    }
}
class three extends two {
    public void display(){
        System.out.println("class three");
    }
}
OUTPUT:
class three
*************************************************************************************************************************************************
import java.util.*;
public class Main{
    public static void main(String[]args){
        Scanner sc =new Scanner(System.in);
        fun1 sc=new fun1();
        int no element=sc.nextInt();
        if(no element==2){
            int a=sc.nextInt();
            int b=sc.nextInt();
            sc.fun1(a,b);
        }
        else if(no element==3){
            int a=sc.nextInt();
            int a=sc.nextInt();
            int a=sc.nextInt();
            sc.fun1(a,b,c);
        } else{
            System.out.println("Invalid input");
        }
    }
}
class one{
    public void display(int x,int y){
        System.out.println(x+y);
    }
}
class two extends one{
    public void display1(){
        System.out.println(x*y*z);
    }
}
